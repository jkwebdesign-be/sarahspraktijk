<style>
.therapie-hero {
  width: 100%;
  padding: var(--space-24) 0 var(--space-16) 0;
}

.therapie-hero__container {
  max-width: var(--container-max);
  margin: 0 auto;
  padding: 0 var(--container-padding);
  display: grid;
  grid-template-columns: 45fr 55fr;
  gap: var(--space-16);
  align-items: center;
}

.therapie-hero__content {
  display: flex;
  flex-direction: column;
  gap: var(--space-6);
}

.therapie-hero__content h1 {
  margin-bottom: var(--space-2);
}

.therapie-hero__content p {
  margin: 0;
}

.therapie-hero__content .btn {
  align-self: flex-start;
  margin-top: var(--space-4);
}

.therapie-hero__images {
  position: relative;
  width: 100%;
  aspect-ratio: 1 / 1;
  min-height: 500px;
}

.therapie-hero__image-main {
  position: absolute;
  top: 0;
  right: 0; /* CHANGED from left: 0 */
  width: 70%;
  height: 100%;
  object-fit: cover;
  object-position: center;
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-lg);
  z-index: 1;
}

.therapie-hero__image-overlay {
  position: absolute;
  bottom: 10%;
  left: 13%; /* CHANGED from right: 0 */
  width: 38%;
  height: 42%;
  object-fit: cover;
  object-position: center;
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-xl);
  z-index: 2;
}

/* responsive */
@media (max-width: 768px) {
  .therapie-hero {
    padding: var(--space-16) 0 var(--space-12) 0;
  }

  .therapie-hero__container {
    grid-template-columns: 1fr;
    gap: var(--space-12);
  }

  .therapie-hero__images {
    min-height: 400px;
    aspect-ratio: 3 / 4;
  }

  .therapie-hero__image-main {
    width: 100%;
    right: 0; /* Keep it on the right on mobile too */
  }

  .therapie-hero__image-overlay {
    display: none
  }
}

/* Right-align the "Waarom kiezen" section title */
.icon-section-left {
	text-align: right;
	display: flex;
	flex-direction: column;
	justify-content: center;
}

/* responsive: left-align on mobile */
@media (max-width: 768px) {
	.icon-section-left {
		text-align: left;
	}
}

	/* services section */
	.therapie-services {
		width: 100%;
		padding: var(--space-16) 0;
		background-color: var(--color-background-secondary);
	}

	.therapie-services__container {
		max-width: var(--container-max);
		margin: 0 auto;
		padding: 0 var(--container-padding);
	}

	.therapie-services__title {
		text-align: left;
		margin-bottom: var(--space-8);
	}

	.therapie-services__subtitle {
		text-align: right;
		padding-top: var(--space-4);
		border-top: 2px solid var(--color-primary);
		margin-bottom: var(--space-16);
		max-width: 600px;
		margin-left: auto;
	}

	.therapie-services__grid {
		display: grid;
		grid-template-columns: repeat(3, 1fr);
		gap: var(--space-8);
	}

	.therapie-services__card {
		padding: var(--space-8);
		display: flex;
		flex-direction: column;
		gap: var(--space-4);
	}

	.therapie-services__card h3 {
		margin: 0;
	}

	.therapie-services__card p {
		margin: 0;
	}

	.therapie-services__link {
		text-decoration: none;
		color: var(--color-primary);
		font-weight: var(--font-weight-medium);
		transition: color var(--transition-base);
		align-self: flex-start;
	}

	.therapie-services__link:hover {
		color: var(--color-text);
	}

	/* staggered layout - both rows progressively lower */
	.therapie-services__card--1 {
		margin-top: 0;
	}

	.therapie-services__card--2 {
		margin-top: var(--space-16);
	}

	.therapie-services__card--3 {
		margin-top: var(--space-32);
	}

	.therapie-services__card--4 {
		margin-top: var(--space-12);
	}

	.therapie-services__card--5 {
		margin-top: calc(var(--space-16) + var(--space-12));
	}

	.therapie-services__card--6 {
		margin-top: calc(var(--space-32) + var(--space-12));
	}

	@media (max-width: 768px) {
		.therapie-services__grid {
			grid-template-columns: 1fr;
		}

		.therapie-services__subtitle {
			text-align: left;
			max-width: 100%;
		}

		/* reset all staggered margins on mobile */
		.therapie-services__card--1,
		.therapie-services__card--2,
		.therapie-services__card--3,
		.therapie-services__card--4,
		.therapie-services__card--5,
		.therapie-services__card--6 {
			margin-top: 0;
		}
	}

</style>