---
interface ServiceCard {
  image: string;
  title: string;
  description: string;
  link: string;
  linkText: string;
  layout: 'vertical' | 'horizontal';
}

interface Props {
  title: string;
  subtitle?: string;
  services: ServiceCard[];
  backgroundColor?: string;
}

const {
  title,
  subtitle,
  services,
  backgroundColor = 'transparent'
} = Astro.props;

// Calculate which images should be eager loaded
// Desktop: 4 columns, so first 8 images = first 2 rows
// Mobile: 1 column, so first 3 images = above the fold
const eagerLoadCount = 6; // Conservative estimate works for both desktop and mobile
---

<section class="services-grid" style={`background-color: ${backgroundColor};`}>
  <div class="services-grid__container">
    <div class="services-grid__header">
      <h1>{title}</h1>
      {subtitle && <p>{subtitle}</p>}
    </div>

    <div class="services-grid__grid">
      {services.map((service, index) => (
        <a href={service.link} class={`services-grid__card services-grid__card--${service.layout}`}>
          <div class="services-grid__image">
            <img 
              src={service.image} 
              alt={service.title}
              loading={index < eagerLoadCount ? 'eager' : 'lazy'}
              decoding={index < eagerLoadCount ? 'sync' : 'async'}
            />
          </div>
          <div class="services-grid__content">
            <h3>{service.title}</h3>
            <p>{service.description}</p>
            <span class="services-grid__link">{service.linkText} â†’</span>
          </div>
        </a>
      ))}
    </div>
  </div>
</section>

<style>
  .services-grid {
    width: 100%;
    padding: var(--space-24) 0 var(--space-16) 0;
  }

  .services-grid__container {
    max-width: var(--container-max-wide);
    margin: 0 auto;
    padding: 0 var(--container-padding);
  }

  .services-grid__header {
    margin-bottom: var(--space-16);
  }

  .services-grid__header h1 {
    margin-bottom: var(--space-4);
  }

  .services-grid__header p {
    font-size: var(--font-size-lg);
    margin: 0;
  }

  .services-grid__grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: var(--space-6);
    grid-auto-flow: dense; /* KEY: Automatically fills gaps intelligently */
  }

  .services-grid__card {
    background-color: white;
    border-radius: var(--radius-md);
    overflow: hidden;
    box-shadow: var(--shadow-md);
    display: flex;
    transition: transform var(--transition-base), box-shadow var(--transition-base);
    text-decoration: none;
    color: inherit;
    cursor: pointer;
  }

  .services-grid__card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
  }

  /* Vertical layout - 1 column wide */
  .services-grid__card--vertical {
    grid-column: span 1;
    flex-direction: column;
  }

  /* Horizontal layout - 2 columns wide */
  .services-grid__card--horizontal {
    grid-column: span 2;
    flex-direction: row;
  }

  .services-grid__image {
    position: relative;
    overflow: hidden;
  }

  .services-grid__card--vertical .services-grid__image {
    width: 100%;
    height: 200px;
  }

  .services-grid__card--horizontal .services-grid__image {
    width: 50%;
    min-height: 250px;
  }

  .services-grid__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-base);
  }

  .services-grid__card:hover .services-grid__image img {
    transform: scale(1.05);
  }

  .services-grid__content {
    padding: var(--space-6);
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
  }

  .services-grid__card--vertical .services-grid__content {
    flex: 1;
  }

  .services-grid__card--horizontal .services-grid__content {
    width: 50%;
    justify-content: center;
  }

  .services-grid__content h3 {
    margin: 0;
    font-size: var(--font-size-xl);
    font-weight: var(--font-weight-regular);
    font-family: var(--font-family-serif);
    color: var(--color-text);
  }

  .services-grid__content p {
    margin: 0;
    font-size: var(--font-size-base);
    line-height: var(--line-height-normal);
    color: var(--color-text);
  }

  .services-grid__link {
    text-decoration: none;
    color: var(--color-primary);
    font-weight: var(--font-weight-regular);
    font-size: var(--font-size-base);
    transition: color var(--transition-base);
    margin-top: auto;
    display: inline-block;
  }

  .services-grid__card:hover .services-grid__link {
    color: var(--color-text);
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .services-grid__grid {
      grid-template-columns: repeat(2, 1fr);
    }

    /* Vertical cards stay vertical, span 1 column */
    .services-grid__card--vertical {
      grid-column: span 1;
      flex-direction: column;
    }

    /* Horizontal cards span full width, stay horizontal */
    .services-grid__card--horizontal {
      grid-column: span 2;
      flex-direction: row; /* Keep horizontal */
    }

    /* Adjust horizontal card proportions for tablet */
    .services-grid__card--horizontal .services-grid__image {
      width: 40%;
      min-height: 220px;
    }

    .services-grid__card--horizontal .services-grid__content {
      width: 60%;
    }
  }

  @media (max-width: 768px) {
    .services-grid {
      padding: var(--space-16) 0 var(--space-12) 0;
    }

    .services-grid__grid {
      grid-template-columns: 1fr;
      gap: var(--space-4);
    }

    /* Vertical cards stay vertical on mobile */
    .services-grid__card--vertical {
      flex-direction: column;
    }

    /* Horizontal cards STAY horizontal on mobile */
    .services-grid__card--horizontal {
      grid-column: span 1;
      flex-direction: row; /* Keep horizontal */
    }

    /* Adjust horizontal card proportions for mobile */
    .services-grid__card--horizontal .services-grid__image {
      width: 35%;
      min-height: 180px;
    }

    .services-grid__card--horizontal .services-grid__content {
      width: 65%;
      padding: var(--space-4);
    }
  }
</style>