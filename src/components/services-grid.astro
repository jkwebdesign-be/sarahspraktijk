---
interface ServiceCard {
  image: string;
  title: string;
  description: string;
  link: string;
  linkText: string;
  layout: 'vertical' | 'horizontal';
}

interface Props {
  title: string;
  subtitle?: string;
  services: ServiceCard[];
  backgroundColor?: string;
}

const {
  title,
  subtitle,
  services,
  backgroundColor = 'transparent'
} = Astro.props;
---

<section class="services-grid" style={`background-color: ${backgroundColor};`}>
  <div class="services-grid__container">
    <div class="services-grid__header">
      <h1>{title}</h1>
      {subtitle && <p>{subtitle}</p>}
    </div>

    <div class="services-grid__grid">
      {services.map((service) => (
        <div class={`services-grid__card services-grid__card--${service.layout}`}>
          <div class="services-grid__image">
            <img src={service.image} alt={service.title} />
          </div>
          <div class="services-grid__content">
            <h3>{service.title}</h3>
            <p>{service.description}</p>
            <a href={service.link} class="services-grid__link">{service.linkText} â†’</a>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .services-grid {
    width: 100%;
    padding: var(--space-24) 0 var(--space-16) 0;
  }

  .services-grid__container {
    max-width: var(--container-max);
    margin: 0 auto;
    padding: 0 var(--container-padding);
  }

  .services-grid__header {
    margin-bottom: var(--space-16);
  }

  .services-grid__header h1 {
    margin-bottom: var(--space-4);
  }

  .services-grid__header p {
    font-size: var(--font-size-lg);
    color: var(--color-text-muted);
    margin: 0;
  }

  .services-grid__grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: var(--space-6);
  }

  .services-grid__card {
    background-color: var(--color-background);
    border-radius: var(--radius-lg);
    overflow: hidden;
    box-shadow: var(--shadow-md);
    display: flex;
    transition: transform var(--transition-base), box-shadow var(--transition-base);
  }

  .services-grid__card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
  }

  /* Vertical layout - 1 column wide */
  .services-grid__card--vertical {
    grid-column: span 1;
    flex-direction: column;
  }

  /* Horizontal layout - 2 columns wide */
  .services-grid__card--horizontal {
    grid-column: span 2;
    flex-direction: row;
  }

  .services-grid__image {
    position: relative;
    overflow: hidden;
  }

  .services-grid__card--vertical .services-grid__image {
    width: 100%;
    height: 200px;
  }

  .services-grid__card--horizontal .services-grid__image {
    width: 50%;
    min-height: 250px;
  }

  .services-grid__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-base);
  }

  .services-grid__card:hover .services-grid__image img {
    transform: scale(1.05);
  }

  .services-grid__content {
    padding: var(--space-6);
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
  }

  .services-grid__card--vertical .services-grid__content {
    flex: 1;
  }

  .services-grid__card--horizontal .services-grid__content {
    width: 50%;
    justify-content: center;
  }

  .services-grid__content h3 {
    margin: 0;
    font-size: var(--font-size-xl);
    font-weight: var(--font-weight-regular);
    color: var(--color-text);
  }

  .services-grid__content p {
    margin: 0;
    font-size: var(--font-size-base);
    line-height: var(--line-height-normal);
    color: var(--color-text);
  }

  .services-grid__link {
    text-decoration: none;
    color: var(--color-primary);
    font-weight: var(--font-weight-regular);
    font-size: var(--font-size-base);
    transition: color var(--transition-base);
    margin-top: auto;
  }

  .services-grid__link:hover {
    color: var(--color-text);
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .services-grid__grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .services-grid__card--vertical,
    .services-grid__card--horizontal {
      grid-column: span 1;
      flex-direction: column;
    }

    .services-grid__card--horizontal .services-grid__image {
      width: 100%;
      height: 200px;
    }

    .services-grid__card--horizontal .services-grid__content {
      width: 100%;
    }
  }

  @media (max-width: 768px) {
    .services-grid__grid {
      grid-template-columns: 1fr;
    }

    .services-grid__card--horizontal .services-grid__image {
      height: 180px;
    }
  }
</style>