---
interface Card {
  image?: string;
  title: string;
  description: string;
  price?: string;
  ctaText?: string;
  ctaLink?: string;
}

interface Props {
  title: string;
  subtitle?: string;
  cards: Card[];
  backgroundColor?: string;
  splitBackground?: boolean;
  cardBackgroundColor?: string;
  cardContentAlign?: 'left' | 'center';
  hasCardBackground?: boolean;
  imageSize?: string;
  halfwayBackground?: boolean;
  halfwayBackgroundColor?: string;
  // Main CTA below all cards
  mainCtaText?: string;
  mainCtaLink?: string;
  mainCtaStyle?: 'primary' | 'secondary' | 'accent' | 'outline';
}

const {
  title,
  subtitle,
  cards = [],
  backgroundColor = 'var(--color-background-secondary)',
  splitBackground = false,
  cardBackgroundColor = '#ffffff',
  cardContentAlign = 'center',
  hasCardBackground = true,
  imageSize = '120px',
  halfwayBackground = false,
  halfwayBackgroundColor = 'var(--color-background-secondary)',
  mainCtaText,
  mainCtaLink,
  mainCtaStyle = 'primary'
} = Astro.props;
---

<section 
  class={`three-cards ${splitBackground ? 'three-cards--split-bg' : ''}`}
  style={`
    --bg-color: ${backgroundColor};
    --card-bg: ${hasCardBackground ? cardBackgroundColor : 'transparent'};
    --card-content-align: ${cardContentAlign};
    --image-size: ${imageSize};
    --halfway-bg: ${halfwayBackgroundColor};
    --card-text-color: ${hasCardBackground ? 'var(--color-text-inverse)' : 'var(--color-text)'};
    --card-shadow: ${hasCardBackground ? 'var(--shadow-lg)' : 'none'};
  `}
>
  {splitBackground && <div class="three-cards__background"></div>}
  {halfwayBackground && <div class="three-cards__halfway-background"></div>}

  <div class="three-cards__content">
    <header class="three-cards__header">
      <h2>{title}</h2>
      {subtitle && <p class="subtitle">{subtitle}</p>}
    </header>

    <div class="three-cards__grid">
      {cards.map((card) => (
        <div class="three-cards__card">
          {card.image && (
            <img src={card.image} alt={card.title} class="three-cards__image" />
          )}
          <h3 class="three-cards__title">{card.title}</h3>
          <p class="three-cards__description">{card.description}</p>
          {card.price && (
            <p class="three-cards__price">{card.price}</p>
          )}
          {card.ctaText && card.ctaLink && (
            <a href={card.ctaLink} class="btn btn--secondary">{card.ctaText}</a>
          )}
        </div>
      ))}
    </div>

    {mainCtaText && mainCtaLink && (
      <div class="three-cards__main-cta">
        <a href={mainCtaLink} class={`btn btn--${mainCtaStyle}`}>{mainCtaText}</a>
      </div>
    )}
  </div>
</section>

<style>
  .three-cards {
    position: relative;
    width: 100%;
    padding: var(--space-16) 0;
  }

  .three-cards--split-bg {
    background-color: var(--bg-color);
  }

  .three-cards__background {
    position: absolute;
    top: 50%;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: var(--color-background);
    z-index: 0;
  }

  .three-cards__halfway-background {
    position: absolute;
    top: 50%;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: var(--halfway-bg);
    z-index: 0;
  }

  .three-cards__content {
    position: relative;
    z-index: 1;
    max-width: var(--container-max-wide);
    margin: 0 auto;
    padding: 0 var(--container-padding);
  }

  .three-cards__header {
    text-align: center;
    max-width: 1000px;
    margin: 0 auto var(--space-16) auto;
  }

  .three-cards__header h2 {
    font-size: var(--font-size-3xl);
    font-weight: var(--font-weight-regular);
    line-height: var(--line-height-tight);
    color: var(--color-text);
    margin: 0 0 var(--space-3) 0;
  }

  .three-cards__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-8);
  }

  .three-cards__card {
    background-color: var(--card-bg);
    border-radius: var(--radius-lg);
    padding: var(--space-12);
    display: flex;
    flex-direction: column;
    align-items: var(--card-content-align);
    text-align: var(--card-content-align);
    gap: var(--space-4);
    box-shadow: var(--card-shadow);
    width: 100%;
    max-width: 400px;
    margin: 0 auto;
    height: 100%;
    min-height: unset;
  }

  .three-cards__image {
    width: var(--image-size);
    height: var(--image-size);
    object-fit: contain;
    margin-bottom: var(--space-2);
    flex-shrink: 0;
  }

  .three-cards__title {
    font-size: var(--font-size-2xl);
    font-weight: var(--font-weight-regular);
    line-height: var(--line-height-tight);
    color: var(--card-text-color);
    margin: 0;
  }

  .three-cards__description {
    font-size: var(--font-size-base);
    line-height: var(--line-height-normal);
    color: var(--card-text-color);
    margin: 0;
    flex-grow: 1;
  }

  .three-cards__price {
    font-size: var(--font-size-xl);
    font-weight: var(--font-weight-bold);
    color: var(--color-text);
    margin: var(--space-2) 0;
  }

  /* Main CTA below all cards */
  .three-cards__main-cta {
    display: flex;
    justify-content: center;
    margin-top: var(--space-12);
  }

  /* Responsive */
  @media (min-width: 1000px) {
    .three-cards__grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  @media (min-width: 768px) and (max-width: 999px) {
    .three-cards__grid {
      grid-template-columns: 1fr;
    }
  }
</style>